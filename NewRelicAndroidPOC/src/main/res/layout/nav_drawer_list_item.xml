<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="8dp">

    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/nd_item_icon"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/nd_item_title"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:textColor="#CCCCCC"
            android:layout_toRightOf="@id/nd_item_icon"
            android:layout_centerVertical="true"/>
    <TextView
            android:text="1"
            android:id="@+id/nd_item_red_box"
            android:background="@color/NavDrawerRed"
            style="@style/NavDrawerItemFlag"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    <TextView
            android:text="1"
            android:id="@+id/nd_item_yellow_box"
            android:background="@color/NavDrawerYellow"
            style="@style/NavDrawerItemFlag"
            android:layout_toLeftOf="@id/nd_item_red_box"
            android:layout_centerVertical="true"/>
    <TextView
            android:text="1"
            android:id="@+id/nd_item_green_box"
            android:background="@color/NavDrawerGreen"
            style="@style/NavDrawerItemFlag"
            android:layout_toLeftOf="@id/nd_item_yellow_box"
            android:layout_centerVertical="true"/>


</RelativeLayout>